@{
    ViewData["Title"] = "Edit Contact";
    Layout = "_Layout";
}

<div class="rounded-lg">
    <h2 class="text-xl font-bold text-center mb-6">Update Contact</h2>
    <form method="post" enctype="multipart/form-data" asp-action="Update" asp-controller="Contact">
        <input type="hidden" name="Id" value="@ViewBag.Contact.Id" />

        <div class="mb-5">
            <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Contact Name</label>
            <input type="text" id="name" name="Name" value="@ViewBag.Contact.Name" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
        </div>

        <div class="mb-5">
            <label for="surname" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Contact Surname</label>
            <input type="text" id="surname" name="Surname" value="@ViewBag.Contact.Surname" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
        </div>

        <div class="mb-5">
            <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Contact Email</label>
            <input type="email" id="email" name="Email" value="@ViewBag.Contact.Email" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
        </div>

        <div class="mb-5">
            <label for="phone" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Contact Phone</label>
            <input type="text" id="phone" name="Phone" value="@ViewBag.Contact.Phone" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
        </div>
        <div class="mb-5 text-center">
            <label class="block mb-2 text-sm font-medium text-gray-900">Current Image</label>
            @if (!string.IsNullOrEmpty(ViewBag.contact.ImagePath))
            {
                <img src="/uploads/@ViewBag.contact.ImagePath" alt="Contact Image" class="rounded-full w-32 h-32 mx-auto">
            }
            else
            {
                <p class="text-gray-500">No image available</p>
            }
        </div>
        <div class="mb-5">
            <label for="image" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Upload New Image</label>
            <input type="file" id="image" name="Image" accept="image/*" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
        </div>

        <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">
            Update
        </button>
    </form>
</div>
