@{
    ViewData["Title"] = "Create Contact";
    Layout = "_Layout";
}
<div class="bg-white shadow rounded-lg p-6 w-full max-w-md mx-auto">
    <h2 class="text-xl font-bold text-center mb-6">Contact Details</h2>

    <div class="flex justify-center mb-6">
        <img src="/uploads/@ViewBag.Contact.ImagePath" alt="User Image" class="rounded-full w-32 h-32 shadow-lg">
    </div>

    <div class="text-lg">
        <p class="mb-4"><strong>Ad:</strong> @ViewBag.Contact.Name</p>
        <p class="mb-4"><strong>Soyad:</strong> @ViewBag.Contact.Surname</p>
        <p class="mb-4"><strong>Nömrə:</strong> @ViewBag.Contact.Phone</p>
        <p class="mb-4"><strong>Email:</strong> @ViewBag.Contact.Email</p>
    </div>

    <div class="mt-6 text-center">
        <a href="@Url.Action("Index", "Contact")"
           class="inline-block px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
            Geri Qayıt
        </a>
    </div>
</div>
