@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
<div class="flex justify-end mb-4">
    <a href="@Url.Action("create", "contact")"
       class="inline-block px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded hover:bg-blue-700">
        <i class="fas fa-plus mr-2"></i> Add Contact
    </a>
</div>
<div class="bg-white shadow rounded-lg p-6 w-full">
    <h2 class="text-2xl font-bold mb-4">Contact List</h2>
    <ul class="divide-y divide-gray-200">
        @foreach (var contact in ViewBag.Contacts)
        {
            <li class="flex justify-between items-center py-4">
                <span class="text-lg font-medium">@contact.Name</span>

                <div class="space-x-4">
                    <a href="@Url.Action("view", "contact", new { id = contact.Id })"
                       class="text-blue-600 hover:text-blue-800">
                        <i class="fas fa-eye"></i> 
                    </a>
                    <a href="@Url.Action("edit", "contact", new { id = contact.Id })"
                       class="text-green-600 hover:text-green-800">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a onclick="return confirm('Are you sure you want to delete this contact?')" href="@Url.Action("delete", "contact", new { id = contact.Id })"
                       class="text-red-600 hover:text-red-800"
                       onclick="return confirm('Are you sure you want to delete this contact?');">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </div>
            </li>
        }
    </ul>
</div>
